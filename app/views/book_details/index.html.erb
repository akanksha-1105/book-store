<p id="notice"><%= notice %></p>

<h1>Book Details</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year published</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_details.each do |book_detail| %>
      <tr>
        <td><%= book_detail.title %></td>
        <td><%= book_detail.year_published %></td>
        <td><%= book_detail.price %></td>
        <td><%= link_to 'Show', book_detail %></td>
        <td><%= link_to 'Edit', edit_book_detail_path(book_detail) %></td>
        <td><%= link_to 'Destroy', book_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

