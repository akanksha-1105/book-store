<p id="notice"><%= notice %></p>

<h1>Authers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authers.each do |auther| %>
      <tr>
        <td><%= auther.first_name %></td>
        <td><%= auther.last_name %></td>
        <td><%= auther.title %></td>
        <td><%= link_to 'Show', auther %></td>
        <td><%= link_to 'Edit', edit_auther_path(auther) %></td>
        <td><%= link_to 'Destroy', auther, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

